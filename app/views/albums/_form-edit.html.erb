<%= simple_form_for album do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :description,
                required: true,
                autofocus: true,
                label: 'Description' %>

    <%= f.input :available, label: 'Disponible pour un prêt?', as: :boolean, :input_html => { :checked => true }, checked_value: 'true', unchecked_value: 'false' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Mettre à jour l'album", class: 'btn-form-create' %>
  </div>
<% end %>
